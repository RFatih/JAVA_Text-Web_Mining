package trainset;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.List;
import java.util.Set;

import test.TF;

public class TestReader {

	public List<String> read(String location,Set<String> freq) throws IOException
	{
		File dir = new File(location);
		File[] files = dir.listFiles();

		TF tf = new TF();
		List<String> rValue = new ArrayList<String>();
        for (File file : files) {
            if(file.isFile()) {
                BufferedReader inputStream =new BufferedReader(new InputStreamReader(new FileInputStream(file),"ISO-8859-9"));
                String line;
                try {
                    
                    while ((line = inputStream.readLine()) != null) {
                    	rValue.add(file.getName());
                    	rValue.addAll(tf.calculateTf(line,freq));
                    }
                }catch(IOException e) {
                	System.out.println(e);
                }
                finally {
                    if (inputStream != null) {
                        inputStream.close();
                    }
                }
            }
          
        } 
        return rValue;  
	}
}
